<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="hussein.com.swype.app.SecurityActivity"
    android:background="#ffffff"
    tools:showIn="@layout/activity_security">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@null"
        android:src="@drawable/back_icon2"
        android:paddingTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Password"
        android:id="@+id/text_Password"
        android:paddingRight="440px"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/back_button"
        android:layout_toEndOf="@+id/back_button"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/optSettingsbtn"
        android:src="@drawable/opt_settingsf"
        android:background="@null"
        android:paddingRight="6dp"
        android:paddingTop="5dp"
        android:clickable="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/back_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/disable_enableSwipe"
        android:id="@+id/disable_enable_Swipebtn"
        android:textAllCaps="false"
        android:textSize="11pt"
        android:background="@drawable/disable_enableswipebutton"
        android:textAlignment="textStart"
        android:paddingTop="15dp"
        android:gravity="bottom"
        android:layout_below="@+id/optSettingsbtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        tools:ignore="RtlCompat" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/disable_enableSwipe"
        android:id="@+id/enable_Swipebtn"
        android:textAllCaps="false"
        android:textSize="11pt"
        android:textAlignment="textStart"
        android:paddingTop="15dp"
        android:gravity="bottom"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:background="#ffffff"
        android:layout_above="@+id/relativeLayout2"
        android:layout_alignRight="@+id/disable_enable_Swipebtn"
        android:layout_alignEnd="@+id/disable_enable_Swipebtn"
        android:layout_alignLeft="@+id/disable_enable_Swipebtn"
        android:layout_alignStart="@+id/disable_enable_Swipebtn"
        android:visibility="invisible"
        tools:ignore="RtlCompat" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/disable_enable_Swipebtn"
        android:layout_toRightOf="@+id/back_button"
        android:layout_toEndOf="@+id/back_button"
        android:layout_marginTop="33dp"
        android:id="@+id/relativeLayout2"
        android:background="#ffffff">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/relativeLayout3"
            android:background="@null"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingRight="57dp"
            android:paddingBottom="80dp">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/select_swipe_method1"
                android:background="@null"
                android:layout_marginRight="152dp"
                android:layout_marginEnd="152dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/swipe_method1" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_alignParentStart="true"
            android:id="@+id/relativeLayout4"
            android:layout_below="@+id/select_swipe_method1"
            android:layout_alignParentLeft="true"
            android:paddingLeft="97dp"
            android:paddingBottom="80dp"
            tools:ignore="NotSibling">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/select_swipe_method2"
                android:background="@null"
                android:src="@drawable/swipe_method2"
                android:paddingLeft="235px"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
